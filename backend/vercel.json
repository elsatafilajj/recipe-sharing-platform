{
  "version": 2,
 "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "hooks": {
    "build": "npx prisma generate"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ]
}
